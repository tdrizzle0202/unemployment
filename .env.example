# ===========================================
# BenefitPath Environment Configuration
# ===========================================
# Copy this file to .env.local and fill in your values

# -------------------------------------------
# Supabase Configuration
# -------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key (server-side only, never expose to client)
# Used for admin operations like seeding data
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -------------------------------------------
# AI/LLM Configuration
# -------------------------------------------
# Anthropic API key for Claude
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# OpenAI API key (for embeddings)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-key-here

# Grok/xAI API key (for eligibility reasoning)
# Get from: https://console.x.ai/
XAI_API_KEY=xai-your-key-here

# -------------------------------------------
# Document Processing (Optional)
# -------------------------------------------
# Unstructured.io API key for PDF/document parsing
# Get from: https://unstructured.io/
UNSTRUCTURED_API_KEY=your-unstructured-key-here

# -------------------------------------------
# Python Calculator Service (Optional)
# -------------------------------------------
# URL for the Python benefit calculator microservice
# Only needed if using the Python service instead of built-in calculator
PYTHON_SERVICE_URL=http://localhost:8000

# -------------------------------------------
# Application Settings
# -------------------------------------------
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Node environment
NODE_ENV=development
